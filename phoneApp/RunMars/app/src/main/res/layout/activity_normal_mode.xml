<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NormalModeActivity">

    <Button
        android:id="@+id/btn_swingarm2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/btn_swingarm1"
        android:layout_marginTop="100dp"
        android:text="摆臂2" />

    <Button
        android:id="@+id/btn_swingarm1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="200dp"
        android:layout_marginTop="40dp"
        android:text="摆臂1" />

    <Button
        android:id="@+id/btn_swingarm3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_swingarm2"
        android:layout_marginBottom="100dp"
        android:text="摆臂3" />

    <Button
        android:id="@+id/btn_swingarm4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_swingarm2"
        android:layout_marginBottom="40dp"
        android:text="摆臂4" />

    <Button
        android:id="@+id/btn_arm_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="188dp"
        android:layout_marginTop="60dp"
        android:text="上" />

    <Button
        android:id="@+id/btn_arm_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_arm_up"
        android:layout_below="@+id/btn_swingarm2"
        android:text="下" />

    <Button
        android:id="@+id/btn_arm_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btn_arm_up"
        android:layout_marginEnd="40dp"
        android:text="启动" />

    <Button
        android:id="@+id/btn_arm_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_arm_start"
        android:layout_below="@+id/btn_arm_down"
        android:text="复位" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="232dp"
        android:layout_alignBaseline="@+id/btn_swingarm1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="68dp"
        android:text="选中的摆臂"
        android:textSize="30dp"
        android:ems="1"/>

    <Button
        android:id="@+id/btn_arm_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView"
        android:layout_marginEnd="26dp"
        android:text="退出" />
</RelativeLayout>