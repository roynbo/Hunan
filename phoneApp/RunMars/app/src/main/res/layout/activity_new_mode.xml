<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/car_hand_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btn_new_start"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="106dp"
        android:layout_marginTop="107dp"
        android:background="@drawable/selector_btn_start" />

    <Button
        android:id="@+id/btn_new_halt"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_new_start"
        android:layout_marginBottom="113dp"
        android:background="@drawable/selector_btn_halt" />

    <Button
        android:id="@+id/btn_new_reset"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/btn_new_start"
        android:layout_alignTop="@+id/btn_new_halt"
        android:background="@drawable/selector_btn_reset" />


    <Button
        android:id="@+id/btn_new_return"
        android:layout_width="70dp"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/selector_btn_return" />

    <Button
        android:id="@+id/btn_step_start"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_hand_start" />

    <RelativeLayout

        android:id="@+id/lay1"
        android:layout_width="118dp"
        android:layout_height="130dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="95dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_last_front"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:background="@drawable/selector_btn_hand_front" />

        <ImageButton
            android:id="@+id/btn_last_left"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="40dp"
            android:background="@drawable/selector_btn_hand_left" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btn_last_left"
            android:background="@drawable/selector_btn_hand_right" />

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/selector_btn_hand_back" />

        <Button
            android:id="@+id/button7"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/btn_last_front"
            android:background="@drawable/selector_btn_hand_up" />

        <Button
            android:id="@+id/button8"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn_last_front"
            android:background="@drawable/selector_btn_hand_down" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_catch_new"
        android:layout_width="40dp"
        android:layout_height="37dp"
        android:layout_alignStart="@+id/lay1"
        android:layout_below="@+id/lay1"
        android:background="@drawable/btn_hand_close_down" />

    <Button
        android:id="@+id/btn_open_new"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/lay1"
        android:layout_below="@+id/lay1"
        android:background="@drawable/btn_hand_open_down" />
</RelativeLayout>

