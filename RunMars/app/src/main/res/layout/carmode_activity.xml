<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/car_hand_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.example.bo_.runmars.RockerView
        android:id="@+id/rockerView1"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="70dp" />

    <Button
        android:id="@+id/btn_car_start"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_alignTop="@+id/rockerView1"
        android:layout_toEndOf="@+id/imageView5"
        android:background="@drawable/selector_btn_start" />

    <Button
        android:id="@+id/btn_car_halt"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_car_start"
        android:layout_marginBottom="190dp"
        android:background="@drawable/selector_btn_halt" />

    <Button
        android:id="@+id/btn_car_reset"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_alignEnd="@+id/btn_car_start"
        android:layout_alignTop="@+id/btn_car_halt"
        android:background="@drawable/selector_btn_reset" />

    <Button
        android:id="@+id/btn_level1"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/rockerView1"
        android:layout_marginEnd="126dp"
        android:background="@drawable/selector_btn_level1" />

    <Button
        android:id="@+id/btn_level2"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_level1"
        android:layout_marginBottom="290dp"
        android:background="@drawable/selector_btn_level2" />

    <Button
        android:id="@+id/btn_level3"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_level1"
        android:layout_marginBottom="200dp"
        android:background="@drawable/selector_btn_level3" />

    <Button
        android:id="@+id/btn_forup"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/rockerView1"
        android:layout_marginStart="300dp"
        android:background="@drawable/selector_btn_forup" />

    <Button
        android:id="@+id/btn_fordown"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_forup"
        android:layout_marginBottom="135dp"
        android:background="@drawable/selector_btn_fordown" />

    <Button
        android:id="@+id/btn_backup"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/btn_backdown"
        android:layout_alignTop="@+id/btn_fordown"
        android:background="@drawable/selector_btn_backdown" />

    <Button
        android:id="@+id/btn_backdown"
        android:layout_width="70dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/rockerView1"
        android:layout_marginStart="380dp"
        android:background="@drawable/selector_btn_backup" />

    <Button
        android:id="@+id/btn_car_return"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/selector_btn_return" />

    <TextView
        android:id="@+id/car_velocity_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="111dp"
        android:layout_toEndOf="@+id/rockerView1"
        android:text="0.0"
        android:textColor="#A1F6FF" />

    <TextView
        android:id="@+id/car_velocity_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="137dp"
        android:layout_toEndOf="@+id/rockerView1"
        android:text="0.0"
        android:textColor="#A1F6FF" />

    <Button
        android:id="@+id/imageView5"
        android:layout_width="160dp"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="220dp"
        android:background="@drawable/mars" />
</RelativeLayout>

