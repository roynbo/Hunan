<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/car_hand_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">





    <Button
        android:id="@+id/btn_new_start"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="184dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/selector_btn_start" />

    <Button
        android:id="@+id/btn_new_halt"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/btn_new_start"
        android:layout_below="@+id/btn_new_start"
        android:background="@drawable/selector_btn_halt" />

    <Button
        android:id="@+id/btn_new_reset"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_alignEnd="@+id/btn_new_start"
        android:layout_alignTop="@+id/btn_new_halt"
        android:background="@drawable/selector_btn_reset" />


    <Button
        android:id="@+id/btn_new_return"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/selector_btn_return" />

    <Button
        android:id="@+id/btn_step_start"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_centerInParent="true"
        android:background="@drawable/btn_hand_start" />

    <RelativeLayout

        android:layout_width="247dp"
        android:layout_height="257dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="129dp"
        android:orientation="vertical"
        android:id="@+id/lay1">

        <ImageButton
            android:id="@+id/btn_last_front"
            android:layout_width="113dp"
            android:layout_height="65dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="57dp"
            android:background="@drawable/selector_btn_hand_front" />

        <ImageButton
            android:id="@+id/btn_last_left"
            android:layout_width="88dp"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="84dp"
            android:background="@drawable/selector_btn_hand_left" />

        <ImageButton
            android:id="@+id/button2"
            android:layout_width="88dp"
            android:layout_height="66dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/btn_last_left"
            android:background="@drawable/selector_btn_hand_right" />

        <ImageButton
            android:id="@+id/button4"
            android:layout_width="166dp"
            android:layout_height="108dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/selector_btn_hand_back" />

        <Button
            android:id="@+id/button7"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/btn_last_front"
            android:background="@drawable/selector_btn_hand_up" />

        <Button
            android:id="@+id/button8"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/btn_last_front"
            android:background="@drawable/selector_btn_hand_down" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_catch_new"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/lay1"
        android:layout_below="@+id/lay1"
        android:background="@drawable/btn_hand_close_down" />

    <Button
        android:id="@+id/btn_open_new"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_alignEnd="@+id/lay1"
        android:layout_below="@+id/lay1"
        android:background="@drawable/btn_hand_open_down" />
</RelativeLayout>

