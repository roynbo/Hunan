<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/car_hand_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.bo_.runmars.RockerView
        android:id="@+id/rockerView2"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="70dp" />

    <Button
        android:id="@+id/btn_hand_start"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/rockerView2"
        android:layout_marginStart="219dp"
        android:background="@drawable/selector_btn_start" />

    <Button
        android:id="@+id/btn_hand_halt"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/btn_hand_start"
        android:layout_below="@+id/btn_hand_start"
        android:background="@drawable/selector_btn_halt" />

    <Button
        android:id="@+id/btn_hand_reset"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_alignEnd="@+id/btn_hand_start"
        android:layout_alignTop="@+id/btn_hand_halt"
        android:background="@drawable/selector_btn_reset" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="53dp"
        app:srcCompat="@drawable/onekeystore_bg" />

    <Button
        android:id="@+id/btn_waist_left"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/btn_hand_close"
        android:layout_alignTop="@+id/rockerView2"
        android:background="@drawable/selector_btn_waist_left" />

    <Button
        android:id="@+id/btn_hand_close"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_below="@+id/btn_hand_start"
        android:layout_toStartOf="@+id/btn_hand_open"
        android:background="@drawable/selector_btn_hand_close" />

    <Button
        android:id="@+id/btn_hand_open"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_alignStart="@+id/btn_waist_right"
        android:layout_below="@+id/btn_hand_start"
        android:background="@drawable/selector_btn_hand_open" />

    <Button
        android:id="@+id/btn_waist_right"
        android:layout_width="85dp"
        android:layout_height="75dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/rockerView2"
        android:layout_marginEnd="197dp"
        android:background="@drawable/selector_btn_waist_right" />


    <Button
        android:id="@+id/btn_hand_return"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/selector_btn_return" />

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_package1"
            android:layout_width="45dp"
            android:layout_height="21dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:background="@drawable/selector_btn_package1" />

        <Button
            android:id="@+id/btn_package2"
            android:layout_width="45dp"
            android:layout_height="21dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:background="@drawable/selector_btn_package2" />

        <Button
            android:id="@+id/btn_package3"
            android:layout_width="45dp"
            android:layout_height="21dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp"
            android:background="@drawable/selector_btn_package3" />

        <Button
            android:id="@+id/btn_package4"
            android:layout_width="45dp"
            android:layout_height="21dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="102dp"
            android:background="@drawable/selector_btn_package4" />
    </RelativeLayout>

    <TextView
        android:id="@+id/hand_velocity_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="111dp"
        android:layout_toEndOf="@+id/rockerView2"
        android:text="0.0"
        android:textColor="#A1F6FF" />

    <TextView
        android:id="@+id/hand_velocity_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="137dp"
        android:layout_toEndOf="@+id/rockerView2"
        android:text="0.0"
        android:textColor="#A1F6FF" />

    <Button
        android:id="@+id/btn_ready"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/hand_velocity_x"
        android:layout_toStartOf="@+id/imageView"
        android:background="@drawable/selector_btn_ready" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/btn_waist_left"
        android:layout_alignTop="@+id/hand_velocity_x"
        android:background="@drawable/selector_btn_back" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_alignTop="@+id/rockerView2"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/mars" />


</RelativeLayout>

